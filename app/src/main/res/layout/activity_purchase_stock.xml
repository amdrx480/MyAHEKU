            <TextView
                android:id="@+id/oydyhscmsj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Harga Barang"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@+id/roydyhsmsj"
                app:layout_constraintTop_toBottomOf="@+id/itemCategorySpinner" />

            <EditText
                android:id="@+id/itemPurchaseEditText"
                android:layout_width="225dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                app:layout_constraintBottom_toBottomOf="@+id/oydyhscmsj"
                app:layout_constraintEnd_toEndOf="@+id/itemCategorySpinner"
                app:layout_constraintTop_toTopOf="@+id/oydyhscmsj" />

            <TextView
                android:id="@+id/oydyhscmsP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Harga Jual"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@+id/oydyhscmsj"
                app:layout_constraintTop_toBottomOf="@+id/itemPurchaseEditText" />

            <EditText
                android:id="@+id/itemSellingEditText"
                android:layout_width="225dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                app:layout_constraintBottom_toBottomOf="@+id/oydyhscmsP"
                app:layout_constraintEnd_toEndOf="@+id/itemPurchaseEditText"
                app:layout_constraintTop_toTopOf="@+id/oydyhscmsP" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/saveButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="32dp"
                android:background="@drawable/cr15bff4eb577"
                android:elevation="10dp"
                android:orientation="vertical"
                android:paddingHorizontal="9dp"
                android:paddingVertical="19dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/itemSellingEditText">

                <TextView
                    android:id="@+id/roydyhcscm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="19dp"
                    android:layout_marginBottom="19dp"
                    android:text="@string/save"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
