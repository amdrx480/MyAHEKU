<!--                android:layout_height="50dp"-->
<!--                app:layout_constraintBottom_toBottomOf="@+id/roydyhcmsj"-->
<!--                app:layout_constraintEnd_toEndOf="@+id/itemCodeEditText"-->
<!--                app:layout_constraintTop_toTopOf="@+id/roydyhcmsj" />-->

            <TextView
                android:id="@+id/rodyhscmsj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Jumlah"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@+id/roydyhcmsj"
                app:layout_constraintTop_toBottomOf="@+id/itemUnitSpinner" />

            <EditText
                android:id="@+id/itemQuantityEditText"
                android:layout_width="225dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                app:layout_constraintBottom_toBottomOf="@+id/rodyhscmsj"
                app:layout_constraintEnd_toEndOf="@+id/itemUnitSpinner"
                app:layout_constraintTop_toTopOf="@+id/rodyhscmsj" />

            <TextView
                android:id="@+id/roydyhsmsj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Kategori "
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@+id/rodyhscmsj"
                app:layout_constraintTop_toBottomOf="@+id/itemQuantityEditText" />

            <Spinner
                android:id="@+id/itemCategorySpinner"
                android:layout_width="225dp"
                android:layout_height="50dp"
                style="@style/Widget.AppCompat.Spinner.Underlined"
                app:layout_constraintBottom_toBottomOf="@+id/roydyhsmsj"
                app:layout_constraintEnd_toEndOf="@+id/itemQuantityEditText"
                app:layout_constraintTop_toTopOf="@+id/roydyhsmsj" />
