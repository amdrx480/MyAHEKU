<!--                app:layout_constraintTop_toTopOf="@+id/roydyhcscmsj" />-->

            <Spinner
                android:id="@+id/itemVendorSpinner"
                android:layout_width="225dp"
                android:layout_height="50dp"
                style="@style/Widget.AppCompat.Spinner.Underlined"
                app:layout_constraintBottom_toBottomOf="@+id/roydyhcscmsj"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/roydyhcscmsj"
                app:layout_constraintTop_toTopOf="@+id/roydyhcscmsj" />

            <TextView
                android:id="@+id/roydyhcscmj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Nama Barang"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@+id/roydyhcscmsj"
                app:layout_constraintTop_toBottomOf="@+id/itemVendorSpinner" />

            <EditText
                android:id="@+id/itemNameEditText"
                android:layout_width="225dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/roydyhcscmj"
                app:layout_constraintEnd_toEndOf="@+id/itemVendorSpinner"
                app:layout_constraintTop_toTopOf="@+id/roydyhcscmj" />

            <TextView
                android:id="@+id/roydyhscmsj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Kode Barang"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@+id/roydyhcscmj"
                app:layout_constraintTop_toBottomOf="@+id/itemNameEditText" />

            <EditText
                android:id="@+id/itemCodeEditText"
                android:layout_width="225dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/roydyhscmsj"
                app:layout_constraintEnd_toEndOf="@+id/itemNameEditText"
                app:layout_constraintTop_toTopOf="@+id/roydyhscmsj" />

            <TextView
                android:id="@+id/roydyhcmsj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Satuan"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@+id/roydyhscmsj"
                app:layout_constraintTop_toBottomOf="@+id/itemCodeEditText" />

            <Spinner
                android:id="@+id/itemUnitSpinner"
                android:layout_width="225dp"
                android:layout_height="50dp"
                style="@style/Widget.AppCompat.Spinner.Underlined"
                app:layout_constraintBottom_toBottomOf="@+id/roydyhcmsj"
                app:layout_constraintEnd_toEndOf="@+id/itemCodeEditText"
                app:layout_constraintTop_toTopOf="@+id/roydyhcmsj" />
