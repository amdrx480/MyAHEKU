<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.stocks.detail.DetailStocksActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/photoImageView"
            android:layout_width="match_parent"
            android:layout_height="360dp"
            tools:src="@drawable/ic_place_default_holder"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/itemNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:text="Bohlam LED 12 Watt"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/photoImageView" />

        <TextView
            android:id="@+id/oydyhscmsP"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Kode Barang          :"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/itemNameTextView"
            app:layout_constraintTop_toBottomOf="@+id/itemNameTextView" />

        <TextView
            android:id="@+id/itemCodeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="SCP-404"
            app:layout_constraintBottom_toBottomOf="@+id/oydyhscmsP"
            app:layout_constraintStart_toEndOf="@+id/oydyhscmsP"
            app:layout_constraintTop_toTopOf="@+id/oydyhscmsP" />

        <TextView
            android:id="@+id/oydyhscmsP1"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Jumlah Persedian              :"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/oydyhscmsP"
            app:layout_constraintTop_toBottomOf="@+id/oydyhscmsP" />

        <TextView
            android:id="@+id/itemQuantityTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Pcs    404"
            app:layout_constraintBottom_toBottomOf="@+id/oydyhscmsP1"
            app:layout_constraintStart_toEndOf="@+id/oydyhscmsP1"
            app:layout_constraintTop_toTopOf="@+id/oydyhscmsP1" />

        <TextView
            android:id="@+id/oydyhscmsP2"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Kategori Barang   :"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/oydyhscmsP1"
            app:layout_constraintTop_toBottomOf="@+id/oydyhscmsP1" />

        <TextView
            android:id="@+id/itemCategoryTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Lampu"
            app:layout_constraintBottom_toBottomOf="@+id/oydyhscmsP2"
            app:layout_constraintStart_toEndOf="@+id/oydyhscmsP2"
            app:layout_constraintTop_toTopOf="@+id/oydyhscmsP2" />

        <TextView
            android:id="@+id/oydyhscmsP3"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Harga Jual            :"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/oydyhscmsP2"
            app:layout_constraintTop_toBottomOf="@+id/oydyhscmsP2" />

        <TextView
            android:id="@+id/itemSellingTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Rp. 2.500"
            app:layout_constraintBottom_toBottomOf="@+id/oydyhscmsP3"
            app:layout_constraintStart_toEndOf="@+id/oydyhscmsP3"
            app:layout_constraintTop_toTopOf="@+id/oydyhscmsP3" />

        <EditText
            android:id="@+id/itemDescriptionStocksEditText"
            android:layout_width="332dp"
            android:layout_height="135dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/edittext_border"
            android:gravity="top|start"
            android:inputType="textMultiLine"
            android:scrollbars="vertical"
            android:paddingStart="8dp"
            android:paddingTop="8dp"
            android:paddingEnd="8dp"
            android:paddingBottom="8dp"
            android:text="@string/lorem_ipsum_text"
            app:layout_constraintEnd_toEndOf="@+id/photoImageView"
            app:layout_constraintStart_toStartOf="@+id/photoImageView"
            app:layout_constraintTop_toBottomOf="@+id/itemSellingTextView" />

        <Button
            android:id="@+id/editButton"
            android:layout_width="283dp"
            android:layout_height="41dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/cr15bff097f46"
            android:padding="8dp"
            android:text="Edit"
            android:textColor="@android:color/white"
            app:layout_constraintEnd_toEndOf="@+id/itemDescriptionStocksEditText"
            app:layout_constraintStart_toStartOf="@+id/itemDescriptionStocksEditText"
            app:layout_constraintTop_toBottomOf="@+id/itemDescriptionStocksEditText" />

        <Button
            android:id="@+id/saveButton"
            android:layout_width="283dp"
            android:layout_height="41dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            android:background="@drawable/cr15bff4eb577"
            android:padding="8dp"
            android:text="Save"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/editButton"
            app:layout_constraintStart_toStartOf="@+id/editButton"
            app:layout_constraintTop_toBottomOf="@+id/editButton" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>