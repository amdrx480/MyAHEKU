<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="296dp"
    android:background="@color/gray"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView_Person"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginBottom="100dp"
        android:src="@drawable/image_person_empty"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_name_person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Irwan Ganteng Banget"
        android:textColor="@color/black"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="@+id/imageView_Person"
        app:layout_constraintStart_toStartOf="@+id/imageView_Person"
        app:layout_constraintTop_toBottomOf="@+id/imageView_Person" />

    <TextView
        android:id="@+id/tv_role"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Admin"
        android:textColor="@color/black"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_name_person"
        app:layout_constraintStart_toStartOf="@+id/tv_name_person"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_person" />


</androidx.constraintlayout.widget.ConstraintLayout>